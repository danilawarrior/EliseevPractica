<Window x:Class="EliseevPractica.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EliseevPractica"
        mc:Ignorable="d"
        Title="Авторизация" Height="185" Width="250" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="Логин:" Margin="0" Width="53" HorizontalAlignment="Left" Height="25"/>
            <TextBox x:Name="loginTxtBl" Width="100"  Height="25"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="Пароль:" Margin="0" Height="25" Width="53"/>
            <TextBox x:Name="passwordtxtTxtBl" Width="100" Height="25"/>
        </StackPanel>
        <StackPanel  Orientation="Horizontal" Grid.Row="2">
            <Button Click="enter_Click"  Width="90" Height="25" Content="Войти" Margin="10"/>
            <Button Click="guest_Click" Content="Войти как гость" Height="25" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
